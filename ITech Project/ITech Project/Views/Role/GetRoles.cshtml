@model List<string>

<div class="container mt-5">
    <a asp-action="AddRole" asp-controller="Role" class="btn btn-success mt-2">Add New Role</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="text-align: center">Role Name</th>
                <th style="text-align: center">Delete</th>
            </tr>
        </thead>
        <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item</td>
                        <td class="text-center">
                            <a asp-controller="Role" asp-action="Remove" asp-route-name="@item" onclick="confirmDelete()" class="btn btn-success">Remove</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
    <div class="gap-2 col-3 mx-auto mt-5">
        <a asp-action="Dashboard" asp-controller="Dashboard" class="btn btn-success ms-2">Go to Dashboard</a>
    </div>
</div>


<script>
    function confirmDelete() 
    {
        let message = confirm("Are You Sure?");
        if(message == false)
            event.preventDefault();
    }
</script> 
