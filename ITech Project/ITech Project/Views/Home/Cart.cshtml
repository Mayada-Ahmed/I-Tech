@section style {
     <link rel="stylesheet" href="~/assets/css/cart.css">
}

<div class="container cart-c">
	<h1>Shopping Cart</h1>
	<div class="cart">
		<div class="products">

			<div class="product">
				<img src="~/assets/imgs/carts/1.jpg">
				<div class="product-info">
					<h3 class="product-name">Product-name</h3>
					<div>
						<span>Price:</span>
						<h4 class="product-price d-inline">100$</h4><br />
					</div>

					<div class="mt-2">
						<span class=" mt-3">Discount:</span>
						<h4 class="product-offer d-inline">40%</h4>
					</div>

					<div>
						<p class="product-quantity">Qnt:
						<input type="number" max="10" min="1" value="1" name="">
					</div>

					<p class="product-remove">
						<i class="fa fa-trash" aria-hidden="true"></i>
						<span class="remove">Remove</span>
					</p>
				</div>
			</div>

			<div class="product">
