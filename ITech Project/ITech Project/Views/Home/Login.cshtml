@section style {
     <link rel="stylesheet" href="~/assets/css/login.css">
}

    <section class="items-section">
        <div class="container login-c">
            <div class="h m-3 ms-0">
                <p>Login</p>
            </div>
            <div class="row">
                <div class="col-12">
                    <h6>Login OR Register anew account</h6>
                    <hr>
                    <div class="row border p-4 m-4 d-flex flex-row justify-content-center">
                        <form class="col-6" action="Dashboard.html" method="get">
                            <h5>Sign in</h5>
                            <p>Log in to my account</p>
                            <div class="d-flex flex-row login-inputs">
                                <div class="d-flex flex-column justify-content-center me-5">
                                    <label for="username">Email</label>
                                    <label for="password">Pass</label>
                                </div>
                                <div class="d-inline-flex flex-column col-7">
                                    <input type="text" id="username">
                                    <input type="password" id="password">
                                </div>
                            </div>
                            <br>
                            <a asp-action="forgetPassword">Forgot your password?</a>
                            <input type="submit" value="LOG IN" class="ms-3 b">
                        </form>
                        <div class="col-1 align-self-center"><div class="v-line"></div></div>
                        <div class="col-5 d-flex flex-column justify-content-evenly">
                            <div>
                                <h5>Sign UP</h5>
                                <p>Sign up on My tech platform</p>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <p class="m-0 me-3">Creat a new Account on I-Tech</p>
                                <a asp-controller="Home" asp-action="signup"><input type="button" value="Sign Up" class="b"></a>
                            </div>
                        </div>
                    </div>
    
                </div>
            </div>
        </div>
    </section>