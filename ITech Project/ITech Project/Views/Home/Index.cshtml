            <h2 class="product-title text-center">Accessories</h2>
        </div>
        <!-- Box 4 -->
        <div class="product-box">
            <a class="p-link" asp-controller="product" asp-action="GetAll" asp-route-Filter="Accessories">
                <img src="~/assets/imgs/carts/4.jpg" alt=""
