        </div>
        <!-- Box 6 -->
        <div class="product-box">
            <a class="p-link" asp-controller="product" asp-action="GetAll" asp-route-Filter="All">
                <img src="~/assets/imgs/carts/11.jpg" alt="" class="product-img"></a>
            <h2 class="product-title text-center">And more</h2>
        </div>
    </div>
</section>

