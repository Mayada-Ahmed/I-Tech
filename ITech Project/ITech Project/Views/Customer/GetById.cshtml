@model Customer
<div class="container mt-5">
    <div class="mt-3">More information about Customer: @Model.FirstName  &nbsp;@Model.LastName</div>
    <table class="table table-bordered table-hover mt-4">
        <tr>
            <td>First Name</td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <td>City</td>
            <td>@Model.City</td>
        </tr>
        <tr>
            <td>Postal Code</td>
            <td>@Model.PostalCode</td>
        </tr>
        <tr>
            <td>Country</td>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <td>Credit Card</td>
            <td>@Model.CreditCardTypeId</td>
        </tr>
        <tr>
            <td>Card Expiration Date</td>
            <td>@Model.CardExpDate</td>
        </tr>
        <tr>
            <td>Billing Country</td>
            <td>@Model.BillingCountry</td>
        </tr>
        <tr>
            <td>Billing Address</td>
            <td>@Model.BillingAddress</td>
        </tr>
        <tr>
            <td>Billing City</td>
            <td>@Model.BillingCity</td>
        </tr>
        <tr>
            <td>Ship Address</td>
            <td>@Model.ShipAddress</td>
        </tr>
        <tr>
            <td>Ship City</td>
            <td>@Model.ShipCity</td>
        </tr>
        <tr>
            <td>Ship Country</td>
            <td>@Model.ShipCountry</td>
        </tr>
        <tr>
            <td>Date Entered</td>
            <td>@Model.DateEntered</td>
        </tr>
    </table>
    <a class="btn btn-secondary mb-2" asp-action="index" asp-controller="home">Back home</a>
</div>



